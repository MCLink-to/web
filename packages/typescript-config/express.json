{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "typeRoots": ["./types", "node_modules/@types"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "composite": true,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src"
  }
}
